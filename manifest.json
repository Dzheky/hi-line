{
    "name": "Hi Line",
    "version": "0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Hi Line",
        "default_icon": "assets/icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "contextMenus"
    ]
}